# 1) Create a tiny Helm app via ArgoCD (Bitnami nginx)
cat > argocd-apps/helm-smoke-test.yaml <<'YAML'
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: helm-smoke-test
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://charts.bitnami.com/bitnami
    chart: nginx
    targetRevision: 15.10.0
    helm:
      values: |
        service:
          type: LoadBalancer
        replicaCount: 1
  destination:
    server: https://kubernetes.default.svc
    namespace: helm-smoke
  syncPolicy:
    automated:
      selfHeal: true
      prune: true
    syncOptions:
      - CreateNamespace=true
YAML

kubectl apply -n argocd -f argocd-apps/helm-smoke-test.yaml
kubectl -n argocd annotate application helm-smoke-test argocd.argoproj.io/refresh=hard --overwrite

# 2) Check it came up
kubectl -n helm-smoke get pods
kubectl -n helm-smoke get svc

